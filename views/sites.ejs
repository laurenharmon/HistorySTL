
<% layout("layouts/boilerplate")%>
            <section class="container my-4">
                <form action="/sites" method="POST">
                    <div class="mb-3">
                        <label class="form-label" for="name">Name: </label>
                        <input class="form-control" type="text" name="site[name]" id="name" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="location">Address: </label>
                        <input class="form-control" type="text" name="location" id="location" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="history">History: </label>
                        <textarea class="form-control" type="text" name="site[history]" id="description"
                            required></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="yearDeveloped">Year Developed: </label>
                        <input type="text" class="form-control" placeholder="1991" name="site[yearDeveloped]"
                            aria-describedby="price-label" required>
                    </div>
                    <div class="select mb-3">

                        <select name="neighborhood">
                            <option>Select dropdown</option>
                            <% for(let neighborhood of neighborhoods) {%>
                                <option value="<%= neighborhood.name  %>">
                                    <%= neighborhood.name %>
                                </option>
                                <% } %>
                        </select>
                    </div>
                    <div>
                    <% tours.forEach((tour, i)=> { %>
                        <div class="col-6">
                            <div class="form-check-inline">
                                <label for="tour-<%= i %>"></label>
                                <input id="tour" type="checkbox" value="<%= tour.name  %>" name="tours[]">
                                <%= tour.name %>
                            </div>
                            
                        </div></div>
                        <% }) %>


                    <button class="button">Create New Site</button>



                </form>
            </section>